# ========== Base de Datos (PostgreSQL) ==========
# Configuración para que user-management-service y audit-service se conecten.
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_super_secret_db_password

# ========== Seguridad JWT ==========
# Importante: El algoritmo HS512 exige que esta clave tenga AL MENOS 64 caracteres.
JWT_SECRET=your_super_secret_key_for_jwt_which_must_be_at_least_64_characters_long
JWT_EXPIRATION_MS=3600000
